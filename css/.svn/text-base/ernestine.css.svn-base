body
{ 
  font: 100% verdana, arial, sans-serif;
  background-color: #000000;
  color: #000000;
  margin: 50px;
  }

a { text-decoration: none; }
a.noborder { border:0px }
a.noborder:hover { border:0px }
a.none { border:1px solid white; }
a.none:hover { border:1px solid white; }
a { border:1px solid white; }
a:hover   { border: 1px solid black; }
a:link {color: #3333FF; background-color: #FFFFFF;}
a:visited {color: #3333FF; background-color: #FFFFFF;}
a:active {color: #3333FF; background-color: #FFFFFF;}


#main { background-color: #FFFFFF;
        width: 650px; /* ou width:70%; ou width:20em; */
        margin-left: auto;
        margin-right: auto; }

#data{ margin: 0 10%;
       background: #FFFFFF}

b.rtop, b.rbottom { display:block; background: #000000 }
b.rtop b, b.rbottom b {
                        display:block;
                        height: 1px;
                        overflow: hidden;
                        background: #FFFFFF
}
b.r1{ margin: 0 5px }
b.r2{ margin: 0 3px } 
b.r3{ margin: 0 2px }
b.rtop b.r4, b.rbottom b.r4 { margin: 0 1px;height: 2px }

#header { margin: 20px }

.title { 
         font-size: 30px;  
         vertical-align: bottom;
         padding-left: 30px;
 }


.version { 
           font-size: 18px;
           color: #FF0000;
           vertical-align: bottom;
           background-color: #FFFFFF;
 }

#player { margin-bottom: 20px;
          margin-top: 20px;
          margin-left: 100px }

#data { margin: 20px }

#author { margin: 20px;
          vertical-align: top;
          }


#album { margin: 20px;
         vertical-align: top;
         }



